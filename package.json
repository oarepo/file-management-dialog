{
  "name": "@oarepo/file-manager",
  "private": false,
  "version": "1.2.0",
  "description": "File management component for Open Access Repository.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "watch": "vite build --watch",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "chromatic": "npx chromatic --exit-once-uploaded"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/file-manager.umd.js",
  "module": "./dist/file-manager.es.js",
  "exports": {
    ".": {
      "import": "./dist/file-manager.es.js",
      "require": "./dist/file-manager.umd.js"
    }
  },
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "dependencies": {
    "@uppy/core": "^4.3.0",
    "@uppy/dashboard": "^4.1.3",
    "@uppy/drag-drop": "^4.0.5",
    "@uppy/file-input": "^4.0.4",
    "@uppy/image-editor": "^3.2.1",
    "@uppy/locales": "^3.5.3",
    "@uppy/progress-bar": "^4.0.2",
    "@uppy/react": "^4.0.4",
    "pako": "^2.1.0",
    "pdf-lib": "^1.17.1",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@storybook/addon-essentials": "^8.2.8",
    "@storybook/addon-interactions": "^8.2.8",
    "@storybook/addon-links": "^8.2.8",
    "@storybook/addon-storysource": "^8.2.8",
    "@storybook/blocks": "^8.2.8",
    "@storybook/react-vite": "^8.2.8",
    "@storybook/test": "^8.2.8",
    "@storybook/test-runner": "^0.19.1",
    "@vitejs/plugin-react": "^4.3.1",
    "chromatic": "^11.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.8.0",
    "msw": "^2.3.5",
    "msw-storybook-addon": "^2.0.3",
    "prop-types": "^15.8.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "storybook": "^8.2.8",
    "vite": "^5.4.0",
    "vite-plugin-babel": "^1.2.0",
    "vite-plugin-css-injected-by-js": "^3.5.1"
  },
  "eslintConfig": {
    "extends": "react",
    "plugins": [
      "eslint:recommended",
      "react/recommended",
      "storybook/recommended"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
